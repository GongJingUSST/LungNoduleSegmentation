<?xml version="1.0" encoding="utf-8"?>
<executable>
  <category>Filtering</category>
  <title>Lung Segmentation CLI Module</title>
  <description><![CDATA[<p>Segment lungs from a chest CT image.</p>]]></description>
  <version>0.0.1</version>
  <documentation-url>http://wiki.slicer.org/slicerWiki/index.php/Documentation/4.4/Modules/LungSegmentationCLI</documentation-url>
  <license/>
  <contributor>Pietro Nardelli (UCC)</contributor>
  <acknowledgements><![CDATA[]]></acknowledgements>
  <parameters>
    <label>IO</label>
    <description><![CDATA[Input/output parameters]]></description>
    <image>
      <name>InputVolume</name>
      <label>Input Volume</label>
      <channel>input</channel>
      <index>0</index>
      <description><![CDATA[Input volume]]></description>
    </image>
    <image type="label">
      <name>OutputVolume</name>
      <label>Nodule Volume</label>
      <channel>output</channel>
      <index>1</index>
      <description><![CDATA[Thresholded input volume]]></description>
    </image>
  </parameters>
  <parameters>
    <label>Filter Settings</label>
    <integer>
      <name>Lower</name>
      <label>Lower</label>
      <flag>-l</flag>
      <longflag>--lower</longflag>
      <description><![CDATA[Lower threshold value]]></description>
      <default>-1024</default>
    </integer>
    <integer>
      <name>Upper</name>
      <label>Upper</label>
      <flag>-u</flag>
      <longflag>--upper</longflag>
      <description><![CDATA[Upper threshold value]]></description>
      <default>-400</default>
    </integer>
   <integer>
      <name>lungsColor</name>
      <longflag>--lungsColor</longflag>
      <description><![CDATA[The integer value (0-255) to use for the segmentation results. This will determine the color of the segmentation that will be generated by the algorithm]]></description>
      <label>Lung Label Color</label>
      <default>1</default>
      <constraints>
        <minimum>1</minimum>
        <maximum>255</maximum>
      </constraints>
    </integer>
  </parameters>
</executable>
